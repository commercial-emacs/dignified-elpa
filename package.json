{
  "name": "dignified-elpa",
  "version": "1.0.0",
  "description": "GitHub Action to compile Elisp packages across architectures",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build",
    "test": "jest",
    "all": "npm run format && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercial-emacs/elisp-compile-action.git"
  },
  "keywords": [
    "emacs",
    "elisp",
    "compilation",
    "github-actions"
  ],
  "author": "Commercial Emacs",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
